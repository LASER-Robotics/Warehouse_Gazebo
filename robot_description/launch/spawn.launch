<?xml version="1.0" encoding="UTF-8"?>
<launch>

    <arg name="x" default="0" />
    <arg name="y" default="0" />
    <arg name="z" default="0.02" />
    <arg name="debug" default="false" />
    <arg name="gui" default="true" />
    <arg name="pause" default="false" />
    <arg name="world" default="$(find robot_description)/world/warehouse.world" />

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="use_sim_time" value="true" />
        <arg name="debug" value="false" />
        <arg name="gui" value="$(arg gui)" />
        <arg name="world_name" value="$(arg world)" />
    </include>

    <!--=========================== SENSORS ===========================-->
    <!-- Set true to sensor spawn in gazebo-->
    <arg name="set_sensor_rplidar" default="false" />
    <arg name="set_sensor_lidar" default="true" />
    <arg name="set_sensor_imu" default="true" />
    <arg name="set_sensor_camera" default="true" />

    <param name="robot_description" command="$(find xacro)/xacro 
    '$(find robot_description)/urdf/robot.urdf.xacro'
    sensor_rplidar:=$(arg set_sensor_rplidar)
    sensor_lidar:=$(arg set_sensor_lidar)
    sensor_imu:=$(arg set_sensor_imu)
    sensor_camera:=$(arg set_sensor_camera)" />


    <node name="my_robot_spawn" pkg="gazebo_ros" type="spawn_model" output="screen" args="-urdf -param robot_description -model my_robot -x $(arg x) -y $(arg y) -z $(arg z)"></node>
</launch>