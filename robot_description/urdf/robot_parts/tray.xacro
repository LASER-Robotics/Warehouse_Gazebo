<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">


    <xacro:macro name="tray" params="prefix">
        <joint name="joint_${prefix}" type="continuous">
            <parent link="piston" />
            <child link="${prefix}" />
            <!-- <dynamics friction="5.0" /> -->
            <origin rpy="0 0 0" xyz="0 0 0" />
            <axis xyz="0 0 1" />
        </joint>

        <gazebo reference="${prefix}">
            <selfCollide>true</selfCollide>
            <mu1 value="0.1" />
            <mu2 value="0.1" />
            <kp value="10000000.0" />
            <kd value="10000" />
            <fdir1 value="0 0 0" />
        </gazebo>

        <link name="${prefix}">
            <inertial>
                <mass value="0.5" />
                <origin rpy="0 0 0" xyz="0 0 0" />
                <inertia ixx="0" ixy="0.0" ixz="0.0" iyy="0" iyz="0.0" izz="0" />
            </inertial>
            <collision name="${prefix}_collision">
                <origin rpy="0 0 0" xyz="0 0 0" />
                <geometry>
                    <mesh filename="package://robot_description/models/laser_robot/meshes/tray.dae" scale="1 1 1" />
                </geometry>
            </collision>
            <visual name="${prefix}_visual">
                <origin rpy="0 0 0" xyz="0 0 0" />
                <geometry>
                    <mesh filename="package://robot_description/models/laser_robot/meshes/tray.dae" scale="1 1 1" />
                </geometry>
            </visual>
        </link>
    </xacro:macro>

    <xacro:tray prefix="tray" />

</robot>